<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/spiderman_3">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#BF000000"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/poster_details"
                android:layout_width="350dp"
                android:layout_height="450dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                />

            <TextView
                android:id="@+id/title_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:textColor="#0A9AF9"
                android:textSize="30sp"
                tools:text="Title" />
            <TextView
                android:id="@+id/date_details"
                tools:text="Release date"
                android:textSize="24dp"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/genre_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:textColor="#0A9AF9"
                android:textSize="24dp"
                tools:text="Genres" />

            <TextView
                android:id="@+id/description_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="10dp"
                android:fontFamily="sans-serif"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum." />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/video_player_details"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:padding="10dp"
                android:layout_marginTop="17dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:paddingBottom="16dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="1">

                <Button
                    android:id="@+id/button_add_favorite"
                    android:layout_width="90dp"
                    android:layout_height="46dp"
                    android:layout_marginLeft="55dp"
                    android:layout_marginRight="95dp"
                    android:background="@drawable/layout_bg"
                    android:backgroundTint="#0A9AF9"
                    android:fontFamily="sans-serif"
                    android:text="Add Favorite"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/button_add_watched"
                    android:layout_width="90dp"
                    android:layout_height="46dp"
                    android:background="@drawable/layout_bg"
                    android:backgroundTint="#0A9AF9"
                    android:fontFamily="sans-serif"
                    android:text="Add Watched"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>