<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BF000000"
    android:layout_marginEnd="10dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_movie_saved"
        android:layout_width="120dp"
        android:layout_height="223dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        tools:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_movie_name_year"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginStart="12dp"
        android:layout_weight="0.3"
        android:fontFamily="sans-serif"
        android:textColor="#0A9AF9"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_movie_saved"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Movie name and year" />

    <TextView
        android:id="@+id/tv_describe_movie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginStart="12dp"
        android:layout_weight="0.3"
        android:fontFamily="sans-serif"
        android:textColor="@color/ic_launcher_background"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_movie_saved"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_name_year"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Describe movies" />

    <Button
        android:id="@+id/button_add_watched"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#0A9AF9"
        android:fontFamily="sans-serif"
        android:text="Add watched"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_add_favorite"
        app:layout_constraintTop_toBottomOf="@+id/tv_describe_movie"
        app:layout_constraintVertical_bias="0.578" />

    <Button
        android:id="@+id/button_add_favorite"
        android:layout_width="90dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#0A9AF9"
        android:fontFamily="sans-serif"
        android:text="Add favorite"
        android:textColor="#FDFCFC"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_movie_saved"
        app:layout_constraintTop_toBottomOf="@+id/tv_describe_movie"
        app:layout_constraintVertical_bias="0.562" />
</androidx.constraintlayout.widget.ConstraintLayout>